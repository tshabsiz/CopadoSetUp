        .noSidebarCell, .sidebarCell .fixed {padding: 0px!important;}
        html body.sfdcBody {padding: 0px;}
    </style>
    <iframe id="iframe_panel" frameborder="0" height="625px" scrolling="no" title="Card Wall" width="100%" src="about:blank"></iframe>
