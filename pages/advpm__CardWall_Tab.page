        $j = jQuery.noConflict();
        $j(document).ready(function () {
            var sf1m = '';
            if ( (typeof sforce != 'undefined') && (sforce != null) ) {
                sf1m            = '&isdtp=p1';
            }
            if ( ({!$User.UIThemeDisplayed == 'Theme4t'}) && (typeof sforce != 'undefined') && (sforce != null) ) {
                sforce.one.navigateToURL('{!$Site.Prefix}/apex/advpm__CardWall?id={!advpm__Matter__c.Id}&heading=1&nohead=1'+sf1m);
            }
            else {
                $j("#iframe_panel").contents().empty();
                $j("#iframe_panel").attr("src", "{!$Site.Prefix}/apex/advpm__CardWall?ltng={!IF($User.UIThemeDisplayed=='Theme4d','1','0')}&id={!advpm__Matter__c.Id}&heading=1&nohead=1"+sf1m);
            }
        });
    </script>
