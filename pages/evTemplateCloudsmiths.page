        <!-- move to external - base stylesheet -->
        <style>
            
            @media (min-width: 1200px) {
                .container {
                width: 970px;
            }
            }
            
            h1, .h1 {
            	font-size: 32px;
            }
            
            .btn {
            	border-radius: 0px;
            }
            
            .btn-row {
                margin-top: 20px;
                margin-bottom: 20px;
            }
            
            .page-content {
            	padding: 20px;
            }
            
            .page-section {
            	margin-top: 30px;
            	margin-bottom: 30px;
            }
            
			
            .event-banner {
            	margin-top: 20px;
            }
            
            .disclaimer {
                padding-top: 10px;
                padding-bottom: 10px;
                font-size: 10px;
            }
            
            .status-msg {
                padding-top: 15px;
                padding-bottom: 15px;
            }
            
            .status-icon {
                font-size: 25px;
                vertical-align: middle;
                margin-right: 10px;
            }
            
            .green {
            	color: green;
            }
            
            .red {
            	color: red;
            }
            
            .well {
                border: none;
                border-radius: 0px;
                -webkit-box-shadow: none;
                box-shadow: none;
            }
            
            .help-block {
                margin-bottom: -5px;
            }
            
            .v-err {
            	font-size: small;
            }
            
        </style>
        
        <c:evThemeConfiguration /> 
        
        <apex:insert name="title"/>
        
    </head>
    
    <!-- HEADER -->
    <div class="container-fluid">
        <div class="page-content">
            
            <!-- HEADER: Logos -->
            <div class="row">
                <div class="col-sm-6">
                    <img src="{!thisEvent.Theme__r.Primary_Logo__c}" />
                </div>
                <div class="col-sm-6 text-right">
                    <img src="{!thisEvent.Theme__r.Secondary_Logo__c}" />
                </div>
            </div>
            <!-- HEADER: Logos END -->
            
            <!-- HEADER: Banner -->
            <apex:outputPanel rendered="{!thisEvent.Web_Pages_Banner_URL__c != ''}">
                <div class="row">
                    <div class="event-banner">
                        <img style="width: 100%" src="{!thisEvent.Web_Pages_Banner_URL__c}" />
                    </div>
                </div>
            </apex:outputPanel>
            <!-- HEADER: Banner END -->
            
        </div>  
    </div>
    <!-- HEADER END -->
    
    <!-- BODY -->
    <div class="container-fluid">
        <div class="page-content">
            <apex:insert name="body"/>
        </div>  
    </div>
    <!-- BODY END -->
    
    <!-- FOOTER -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 disclaimer">
                <apex:outputText escape="false" value="{!thisEvent.Terms_and_Conditions__r.Disclaimer__c}" /> 
            </div>
        </div>
    </div>
    <!-- FOOTER END -->
    
</apex:page>