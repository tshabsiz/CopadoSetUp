<apex:page controller="TasksInboxController">
<apex:form >
<apex:pageBlock >
    <apex:pageBlockSection >
            <apex:outputPanel id="selectFilterOption">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="" for="filterOptionsList"/>
                    <apex:actionRegion >
                        <apex:selectList id="filterOptionsList" value="{!filterOption}" size="1">
                            <apex:selectOptions value="{!filterOptions}"/>
                            <apex:actionSupport event="onchange" rerender="TaskInbox" /> 
                        </apex:selectList>
                    </apex:actionRegion>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Date Range " for="dateFilterOptionsList"/>
                    <apex:actionRegion >
                        <apex:selectList id="dateFilterOptionsList" value="{!dateFilterOption}" size="1">
                            <apex:selectOptions value="{!dateFilterOptions}"/>
                            <apex:actionSupport event="onchange" rerender="TaskInbox" /> 
                        </apex:selectList>
                    </apex:actionRegion>
                </apex:pageBlockSectionItem>
            </apex:outputPanel>
        </apex:pageBlockSection>
    <apex:pageBlockSection id="TaskInbox" columns="1">
        <apex:pageBlockTable value="{!TaskItems}" var="item" width="100%">
            <apex:column >
                <apex:facet name="header">Subject</apex:facet>
                <apex:outputLink value="/{!item.Id}">{!item.Subject}</apex:outputLink>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Related To</apex:facet>
                <apex:outputLink value="/{!item.RelatedToId}">{!item.RelatedToName}</apex:outputLink>
            </apex:column>
            <apex:column >
                <apex:facet name="header">Source</apex:facet>
                <apex:outputText value="{!item.Source}" />
            </apex:column>
            <apex:column >
                <apex:facet name="header">Due Date</apex:facet>
                <apex:outputText value="{0,date,yyyy/MM/dd}">
                    <apex:param value="{!item.DueDate}" />
                </apex:outputText>
            </apex:column> 
            <apex:column >
                <apex:facet name="header">Status</apex:facet>
                <apex:image value="{!IF(item.isClosed, URLFOR('/servlet/servlet.FileDownload?file=01524000000d3Ew'),
                        IF(item.isOverdue, URLFOR('/servlet/servlet.FileDownload?file=01524000000d3Ex'), 
                        URLFOR('/servlet/servlet.FileDownload?file=01524000000d3Ey')))}" width="16" height="16" />
            </apex:column> 
            <apex:facet name="footer"></apex:facet>
        </apex:pageBlockTable>
    </apex:pageBlockSection>
</apex:pageBlock>
</apex:form>
</apex:page>