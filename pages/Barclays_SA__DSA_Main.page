        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"></meta>
        <apex:stylesheet value="{!URLFOR($Resource.Barclays_SA__SF1_DSA, 'css/app.css')}"/>
        <apex:includeScript value="{!URLFOR($Resource.Barclays_SA__SF1_DSA,'js/vendor.js')}"/>
