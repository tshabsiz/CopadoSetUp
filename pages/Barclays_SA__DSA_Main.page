<apex:page docType="html-5.0" controller="Barclays_SA.DSARemoter" extensions="Barclays_SA.DSARemoterCategoryExtension,Barclays_SA.DSARemoterPlaylistExtension,Barclays_SA.DSARemoterContentItemExtension,Barclays_SA.DSARemoterSearchExtension,Barclays_SA.DSARemoterInfoExtension,Barclays_SA.DSARemoterMobileAppConfigExtension" sidebar="false" showHeader="false" standardStylesheets="false">
