<apex:page controller="Condition_Party_Override" action="{!initialiseData}">     
    
    <!-- PAGE HEADER -->
    <apex:sectionHeader title="Condition Party Edit" subtitle="Update Condition Parties"/>  
    
    <apex:form >
        <apex:pageBlock >
            
            <apex:pageMessages rendered="true" escape="false" />
            
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!saveRecord}" />
                <apex:commandButton value="Cancel" action="{!actionCancel}" />
            </apex:pageBlockButtons>
            <apex:pageBlockTable value="{!partyWrappers}" var="wrapperItem"> 
                
                <apex:column headerValue="Select / Deselect"> 
                    <apex:inputCheckbox value="{!wrapperItem.selected}" />
                </apex:column>
                <apex:column value="{!wrapperItem.party.Relationship__c}" />
                <apex:column value="{!wrapperItem.party.Party_Type__c}" />
                <apex:column value="{!wrapperItem.party.Conditions_Monitored_By__c}" /> 
                
            </apex:pageBlockTable>
            
        </apex:pageBlock>
    </apex:form>

</apex:page>