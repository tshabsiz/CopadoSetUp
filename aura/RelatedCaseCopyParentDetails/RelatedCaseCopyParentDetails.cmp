<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global">
	<aura:attribute name="record" type="Case"/>
    
    <force:recordData layoutType="FULL"
                  	  recordId="{!v.recordId}"
                  	  targetFields="{!v.record}"
                      recordUpdated="{!c.loadParent}"
    />	
    
    <lightning:button label="Create Child" onclick="{!c.createChild}" variant="brand" />
</aura:component>