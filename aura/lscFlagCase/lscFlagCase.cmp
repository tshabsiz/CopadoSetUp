<aura:component implements="force:lightningQuickAction,force:hasRecordId" controller="lscFlagCaseExt">
   <aura:attribute name="recordId" type="String" />
   <lightning:workspaceAPI aura:id="workspace"/>
   <center style="z-index:99">
       <lightning:spinner aura:id="TheSpinner" class="slds-hide" variant="brand" size="large"/>
   </center>
   <lightning:badge label="Are you sure you want to flag this email?" /><br/>
   <lightning:button label="Duplicate" onclick="{!c.clickDuplicate}" variant="brand" class="slds-m-top--medium"/>
   <lightning:button label="Out-of-Office" onclick="{!c.clickOOO}" variant="brand" class="slds-m-top--medium"/>
   <lightning:button label="Spam/Junk" onclick="{!c.clickSpam}" variant="brand" class="slds-m-top--medium"/>
</aura:component>