<aura:component controller="ClientPlanStakeholdersControllerMobile">
	
    <aura:attribute name="planId" type="Id" required="true" />
    <aura:attribute name="showProgressBar" type="Boolean" required="false" default="false" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <ltng:require styles="/resource/jquery_ui/jquery-ui-1.10.4.custom/css/ui-lightness/jquery-ui-1.10.4.custom.min.css,/resource/primitives/primitives/primitives.latest.css" />
    <ltng:require scripts="/resource/jquery_1_11,/resource/jquery_ui/jquery-ui-1.10.4.custom/js/jquery-ui-1.10.4.custom.min.js,/resource/primitives/primitives/primitives.latest.js" afterScriptsLoaded="{!c.afterScriptsLoaded}"/>
    
    <div class="slds">
        
        <aura:if isTrue="{!v.showProgressBar}">
            <c:ProgressBarLightningMobile />
            
            <aura:set attribute="else">
                <c:ClientPlanHeader tabId="5" planId="{!v.planId}"/>
                
                <div id="wholePage">
                    <div id="stakeholderRelationshipsLabel" class="sectionLabel" onclick="{!c.onStakeholderRelationshipsLabelClicked}">
                        Stakeholder relationships
                    </div>
                    <div id="stakeholderRelationships" aura:id="stakeholderRelationships" class="section">
                        
                        <aura:if isTrue="{!v.showPlaceholder}">
                            
                            <div id="stakeholdersPlaceholderWrapper">
                                <div>
                                    <span class="slds-avatar slds-avatar--circle slds-avatar--medium">
                                        <img src="/resource/SLDS/assets/images/avatar2.jpg" />
                                    </span>
                                    <div id="placeholderButtonWrapper">
                                        <button class="slds-button slds-button--brand">Add contact</button>
                                    </div>
                                </div>
                            </div>
                            
                            <aura:set attribute="else">
                                <div id="stakeholdersWrapper">
                                    <div id="stakeholders" style="width: 100%; height: 400px;"/>
                                </div>
                            </aura:set>
                        </aura:if>
                    </div>
                </div>
                
            </aura:set>
        </aura:if>
    </div>
    
</aura:component>